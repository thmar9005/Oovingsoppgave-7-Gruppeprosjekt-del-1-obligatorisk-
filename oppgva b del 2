
class Emne:
    def __init__(self, kode, navn, studiepoeng, semester):
        self.kode = kode
        self.navn = navn
        self.studiepoeng = studiepoeng
        self.semester = semester  # "H" for høst eller "V" for vår

    def __str__(self):
        return f"{self.kode} - {self.navn} ({self.studiepoeng} stp), semester: {self.semester}"


class Studieplan:
    def __init__(self, plan_id, tittel):
        self.plan_id = plan_id           
        self.tittel = tittel            
        self.semestre = []               

    def legg_til_semester(self):
        self.semestre.append([])          

    def legg_til_emne(self, semester_nr, emne):
        if semester_nr < len(self.semestre):
            self.semestre[semester_nr].append(emne)  # legger emne til valgt semester
        else:
            print("Semesteret finnes ikke. Lag først flere semestre.")

    def fjern_emne(self, emnekode):
        for semester in self.semestre:
            for emne in semester:
                if emne.kode == emnekode:
                    semester.remove(emne)
                    print("Emne fjernet:", emne.kode)
                    return
        print("Fant ikke emnet:", emnekode)

    def skriv_ut(self):
        print(f"\nStudieplan: {self.tittel} (ID: {self.plan_id})")
        for i, semester in enumerate(self.semestre):
            print(f"\nSemester {i + 1}:")
            if len(semester) == 0:
                print("  (Ingen emner enda)")
            else:
                for emne in semester:
                    print("  ", emne)


def main():
    emne1 = Emne("DAT100", "Grunnleggende programmering", 10, "H")
    emne2 = Emne("DAT120", "Programmering 2", 10, "V")
    emne3 = Emne("DAT200", "Systemutvikling", 10, "H")

    plan = Studieplan("IT2025", "Bachelor i Informatikk")

    plan.legg_til_semester()
    plan.legg_til_semester()

    plan.legg_til_emne(0, emne1)  # legges i 1. semester
    plan.legg_til_emne(1, emne2)  # legges i 2. semester
    plan.legg_til_emne(1, emne3)  # legges i 2. semester

    plan.skriv_ut()

    plan.fjern_emne("DAT200")

    plan.skriv_ut()


main()

